@{
  Layout = "_Layout";
}

@model TreatTracker.Models.Flavor
@using TreatTracker.Models

<h2>Flavor Details</h2>
<hr />
<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<hr />

<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<hr />

@if (@Model.FlavorTreats.Count == 0)
{
  <p>This flavor doesn't have any assigned treats!</p>
}
else 
{
  <h4>Treats assigned to this flavor:</h4>
  @foreach (FlavorTreat join in Model.FlavorTreats)
  {
    <p>@join.Treat.Name</p>
     @using(Html.BeginForm("DeleteJoin", "Treats"))
      {
        @Html.Hidden("joinId", @join.FlavorTreatId)
        <input type="submit" value="Delete"/>
      }
  }
}
<p>@Html.ActionLink("Add Treat to Flavor", "AddTreat", new {id = Model.FlavorId})</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new {id = Model.FlavorId})</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new {id = Model.FlavorId})</p>