@{
  Layout = "_Layout";
}

@model TreatTracker.Models.Treat

<H2>Edit @Html.DisplayFor(model => model.Name)</h3>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  <input type="submit" value="Update Treat Details"/>
}

<p>@Html.ActionLink("Back To Treat", "Details", new {id = Model.TreatId})</p>